<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/small_margin">

            <TextView
                style="@style/Tasker.TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:gravity="start"
                android:text="@string/task_title"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/task_title"
                style="@style/Tasker.EditTextStyle"
                android:maxLength="100" />

            <TextView
                style="@style/Tasker.TextViewStyle"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:text="@string/task_description"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="-10dp" />

            <EditText
                android:id="@+id/task_description"
                style="@style/Tasker.EditTextStyle"
                android:inputType="textMultiLine"
                android:maxLength="1000" />

            <TextView
                style="@style/Tasker.TextViewStyle"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:text="@string/project"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="-10dp" />

            <TextView
                android:id="@+id/task_project"
                style="@style/Tasker.TextViewStyleEditText"
                android:gravity="top"
                android:text="Inbox" />

            <TextView
                android:id="@+id/textView"
                style="@style/Tasker.TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/task_due_date"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="-10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_dueDate"
                    style="@style/Tasker.TextViewStyleEditText"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                style="@style/Tasker.TextViewStyle"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/task_remind_date"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_marginBottom="-10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/task_remindDate"
                    style="@style/Tasker.TextViewStyleEditText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Tasker.TextViewStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:text="@string/task_color" />

                <RadioGroup
                    android:id="@+id/colors_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/color_none"
                        style="@style/Tasker.RadioButtonStyle"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/color_1"
                        style="@style/Tasker.RadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/color_2"
                        style="@style/Tasker.RadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/color_3"
                        style="@style/Tasker.RadioButtonStyle"
                        android:layout_marginRight="0dp" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>