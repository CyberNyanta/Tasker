<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/task_title"
                style="@style/Tasker.EditTextStyle"
                android:hint="@string/task_title"
                android:maxLength="100"/>

            <EditText
                android:id="@+id/task_description"
                style="@style/Tasker.EditTextStyle"
                android:hint="@string/task_description"
                android:inputType="textMultiLine"
                android:maxLength="1000"/>

            <TextView
                android:id="@+id/task_dueDate"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_due_date" />

            <TextView
                android:id="@+id/task_remindDate"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_remind_date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Tasker.TextViewStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:text="@string/task_color" />

                <RadioGroup
                    android:id="@+id/colors_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/color_none"
                        android:checked="true"
                        style="@style/Tasker.RadioButtonStyle"
                        />
                    <RadioButton
                        android:id="@+id/color_1"
                        style="@style/Tasker.RadioButtonStyle" />
                    <RadioButton
                        android:id="@+id/color_2"
                        style="@style/Tasker.RadioButtonStyle"/>
                    <RadioButton
                        android:id="@+id/color_3"
                        style="@style/Tasker.RadioButtonStyle"
                        android:layout_marginRight="0dp"/>
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>