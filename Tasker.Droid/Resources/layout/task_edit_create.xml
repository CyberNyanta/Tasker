<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/small_margin">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/box_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/task_title"
                    style="@style/Tasker.EditTextStyle"
                    android:hint="@string/task_title"
                    android:maxLength="100" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/box_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/task_description"
                    style="@style/Tasker.EditTextStyle"
                    android:hint="@string/task_description"
                    android:inputType="textMultiLine"
                    android:maxLength="1000" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/box_task_dueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_dueDate"
                    style="@style/Tasker.TextViewStyleEditText"

                    android:hint="@string/task_due_date" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/box_task_remindDate"
                android:hint="asdasasd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/task_remindDate"
                    style="@style/Tasker.TextViewStyleEditText"
                    android:hint="@string/task_remind_date" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Tasker.TextViewStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:text="@string/task_color" />

                <RadioGroup
                    android:id="@+id/colors_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/color_none"
                        style="@style/Tasker.RadioButtonStyle"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/color_1"
                        style="@style/Tasker.RadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/color_2"
                        style="@style/Tasker.RadioButtonStyle" />

                    <RadioButton
                        android:id="@+id/color_3"
                        style="@style/Tasker.RadioButtonStyle"
                        android:layout_marginRight="0dp" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>