<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/small_margin">

                <TextView
                    style="@style/Tasker.TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:gravity="start"
                    android:text="@string/task_title"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:layout_marginBottom="-10dp" />
                <TextView
                    android:id="@+id/task_title"
                    style="@style/Tasker.TextViewStyle"
                    android:text="task_title"
                    android:textSize="40sp" />

            <LinearLayout
                android:id="@+id/box_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/Tasker.TextViewStyle"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:text="@string/task_description"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/task_description"
                    style="@style/Tasker.TextViewStyle"
                    android:inputType="textMultiLine"
                    android:textSize="25sp" />
            </LinearLayout>


                <LinearLayout
                    android:id="@+id/box_task_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView"
                        style="@style/Tasker.TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/task_due_date"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/task_dueDate"
                        style="@style/Tasker.TextViewStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_task_remind_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/Tasker.TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/task_remind_date"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/task_remindDate"
                        style="@style/Tasker.TextViewStyle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/task_project"
                    style="@style/Tasker.TextViewStyle" />

                <View
                    android:id="@+id/task_color_border"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="#FF50"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>