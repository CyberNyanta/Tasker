<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:orientation="vertical">

                <View
                    android:id="@+id/task_color_border"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/small_margin"
                    android:background="#FF50" />

                <TextView
                    android:id="@+id/task_title"
                    style="@style/Tasker.TextViewStyle"
                    android:text="task_title"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/task_description"
                    style="@style/Tasker.TextViewStyle"
                    android:inputType="textMultiLine"
                    android:text="task_description"
                    android:textSize="25sp" />

                <LinearLayout
                    android:id="@+id/box_task_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"

                        android:src="@drawable/ic_due_date" />

                    <TextView
                        android:id="@+id/task_dueDate"
                        style="@style/Tasker.TextViewStyle"
                        android:text="task_dueDate" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_task_remind_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_margin"

                        android:src="@drawable/ic_remind" />

                    <TextView
                        android:id="@+id/task_remindDate"
                        style="@style/Tasker.TextViewStyle"
                        android:text="task_dueDate" />
                </LinearLayout>

                <TextView
                    android:id="@+id/task_project"
                    style="@style/Tasker.TextViewStyle" />


            </LinearLayout>
        </ScrollView>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/fab_solved"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="#99FFFFFF" />
    </FrameLayout>
</LinearLayout>