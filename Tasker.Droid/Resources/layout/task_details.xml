<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include layout="@layout/toolbar" />
    <View
        android:id="@+id/task_color_border"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:background="#FF50"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_title"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_title" />

            <TextView
                android:id="@+id/task_description"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_description"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/task_dueDate"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_due_date" />

            <TextView
                android:id="@+id/task_remindDate"
                style="@style/Tasker.TextViewStyle"
                android:hint="@string/task_remind_date" />

            <TextView
                android:id="@+id/task_project"
                style="@style/Tasker.TextViewStyle"
                android:text="project"/>



        </LinearLayout>
    </ScrollView>
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"

        android:src="@drawable/fab_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="bottom|right"
        />
</FrameLayout>