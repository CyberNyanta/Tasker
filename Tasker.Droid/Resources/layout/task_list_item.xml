<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskContainer"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/colorWhite">

    <View
        android:id="@+id/task_color_border"
        android:layout_width="@dimen/task_colorBorder_width"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:background="#FF50"/>

    <TextView
        android:id="@+id/taskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_toRightOf="@id/task_color_border"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="taskTitle"
        android:textSize="@dimen/taskTitle_textSize" />

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskTitle"
        android:layout_toRightOf="@id/task_color_border"
        android:text="dueDate"
        android:textSize="@dimen/taskDetails_textSize" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/taskTitle"
        android:text="projectName"
        android:textSize="@dimen/taskDetails_textSize" />
</RelativeLayout>