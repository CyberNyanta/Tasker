<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Tasker" parent="BaseAppTheme">


    </style>


    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="Tasker.EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
    </style>

    <style name="Tasker.TextViewStyleEditText" >
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
    </style>

    <style name="Tasker.TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
    </style>

    <style name="Tasker.HintTextViewStyle" parent="Tasker.TextViewStyle">
        <item name="android:textSize">@dimen/hint_textSize</item>
        <item name="android:inputType">textFilter|textNoSuggestions</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_negative</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="Tasker.RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:button">@drawable/abc_btn_radio_material</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
    </style>


    <style name="Tasker.ListItem">
        <item name="android:layout_marginTop">@dimen/list_item_marginTop</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
