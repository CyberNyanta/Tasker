<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="Tasker" parent="BaseAppTheme">
        <item name="background">@color/colorBackground</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:actionBarStyle">@style/Tasker.ActionBar</item>
        <item name="actionBarStyle">@style/Tasker.ActionBar</item>
    </style>

    <style name="Tasker.ActionBar">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Tasker.EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
    </style>

    <style name="Tasker.TextViewStyleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
        <item name="android:inputType">textFilter|textNoSuggestions</item>
    </style>

    <style name="Tasker.TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/editText_textSize</item>
        <item name="android:inputType">textFilter|textNoSuggestions</item>
    </style>

    <style name="Tasker.RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:button">@drawable/abc_btn_radio_material</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
    </style>





    <style name="Tasker.ListItem">
        <item name="android:layout_marginTop">@dimen/list_item_marginTop</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
